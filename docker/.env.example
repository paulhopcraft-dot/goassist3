# GoAssist v3.0 Docker Environment Variables
# Copy to .env and configure for your deployment

# ==========================================================================
# Environment
# ==========================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ==========================================================================
# API Configuration
# ==========================================================================
API_PORT=8081
METRICS_PORT=9464
MAX_CONCURRENT_SESSIONS=10

# ==========================================================================
# Database
# ==========================================================================
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_PORT=5432

# ==========================================================================
# Redis
# ==========================================================================
REDIS_PORT=6379

# ==========================================================================
# LLM Configuration (vLLM)
# ==========================================================================
VLLM_PORT=8000
LLM_MODEL=meta-llama/Llama-3.1-8B-Instruct
LLM_VRAM_CAP_GB=20
TENSOR_PARALLEL_SIZE=1
GPU_MEMORY_UTILIZATION=0.85
MAX_MODEL_LEN=8192
HUGGINGFACE_TOKEN=your-hf-token-here

# ==========================================================================
# TTS Configuration (Kyutai)
# ==========================================================================
TTS_ENGINE=kyutai
TTS_PORT=8080
KYUTAI_VOICE_ID=default

# ==========================================================================
# ASR Configuration
# ==========================================================================
# Leave empty for local Whisper, or set for Deepgram cloud
DEEPGRAM_API_KEY=

# ==========================================================================
# Animation Configuration
# ==========================================================================
ANIMATION_ENABLED=true
ANIMATION_ENGINE=audio2face
A2F_GRPC_PORT=50051

# ==========================================================================
# WebRTC Configuration
# ==========================================================================
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
# Set these for production with TURN server
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# ==========================================================================
# Observability (optional profiles)
# ==========================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
